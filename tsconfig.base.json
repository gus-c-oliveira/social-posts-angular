{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "@app/router": ["apps/social-posts-angular/src/app/router/index.ts"],
      "@gus/testing": ["libs/testing/src/index.ts"],
      "@gus/ui": ["libs/ui/src/index.ts"],
      "@gus/ui/testing": ["libs/ui/testing/index.ts"],
      "@gus/user-store": ["libs/user-store/src/index.ts"],
      "@gus/post-store": ["libs/post-store/src/index.ts"],
      "@gus/comment-store": ["libs/comment-store/src/index.ts"],
      "@gus/user-shell": ["libs/user-shell/src/index.ts"],
      "@gus/user-shell/testing": ["libs/user-shell/testing/index.ts"]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
